{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",

    "rootDir": ".",
    "outDir": "dist",

    "strict": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "moduleResolution": "node",
    "types": ["node"],

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
